<h1><%= @question.title.titleize %></h1>
<p><%= @question.body %></p>
<p>Views: <%= @question.view_count %></p>
<!-- <p>Created By: <%#= @question.user.full_name %></p> -->
<%= link_to "Edit", edit_question_path(@question) %>
<%= link_to "Delete", question_path(@question),
                      method: :delete,
                      data: {confirm: "Are you sure?"} %><br>
<h3>Have an Answer?</h3>
<%#= form_for @answer, url: question_answers_path(@question) do %>
<%= @answer.errors.full_messages.join(", ") %>
<%= form_for [@question, @answer] do |f| %>
  <div>
    <%= f.text_area :body, {rows: "5", cols: "50"} %>
  </div>
  <%= f.submit %>
<% end %>

<h2>Answers</h2>
<% @question.new_first_answers.each do |ans| %>
    <%= ans.body %>
    <p><%= time_ago_in_words(ans.created_at) %> ago</p>
    <%= link_to "Delete", question_answer_path(@question, ans), method: :delete, data: {confirm: "Are you sure you want to delete this answer?"} %>
    <hr>
<% end %>
