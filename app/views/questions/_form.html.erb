
  <h1>New Question</h1>
  <%= @question.errors.full_messages.join(", ") %>
  <%# if @question is persisted then the 'form_for' helper will mamke the action
  submit to question_path(@question) and it will make the HTTP request PATCH.
  form_for will also prepopulate the fields with the data fetched from the database
  %>

  <%= simple_form_for @question do |f| %>
      <%= f.input :title %>
      <%= f.input :body %>
      <%= f.association :tags, as: :check_boxes %>
      <%= f.association :category, include_blank: false %>
      <%= f.button :submit, class: "btn btn-default" %>
  <% end %>
